{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "Assets": ["app/assets/*"],
            "Styles/*": ["app/styles/*"],
            "Components/*": ["app/components/*"],
            "Constants/*": ["app/constants/*"]
        }
    },
    "include": [
        "./app/"
    ],
    "exclude": [
        "./node_modules/"
    ]
}