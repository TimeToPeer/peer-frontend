{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "Assets": ["public/assets/*"],
            "Styles/*": ["app/styles/*"],
            "Components/*": ["app/components/*"],
            "Constants/*": ["app/constants/*"],
            "Actions/*": ["app/actions/*"],
            "Reducers/*": ["app/reducers/*"],
            "Types/*": ["app/types/*"],
            "Helpers/*": ["app/helpers/*"],
            "Common/*": ["app/components/common/*"]
        }
    },
    "include": [
        "./app/"
    ],
    "exclude": [
        "./node_modules/"
    ]
}